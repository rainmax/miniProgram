.new-list-container{
  display:flex;
  flex-direction: column;
  padding-top:30rpx;
}

.header text{
  font-size: 30rpx;
}

.avatar{
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}

.title{
  font-size:32rpx;
  font-weight:700;
  margin: 10rpx 0;
}

.content image{
  width:100%;
  height:480rpx;
}

.new-list-container view.detail-info{
  font-size:32rpx;
  text-indent: 32rpx;
  padding:4rpx 10rpx;
}

.footer image{
  width:30rpx;
  height:30rpx;
  vertical-align: middle;
  margin-left:10rpx;
}

.footer text{
  font-size:24rpx;
  margin:0 6rpx;
}
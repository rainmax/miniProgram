/* pages/detail/detail.wxss */

.detail-container {
  display: flex;
  flex-direction: column;
}

.poster {
  width: 100%;
  height: 460rpx;
}

.header-info{
  padding:20rpx;
  font-size:30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align:middle;
}

.title{
  margin-left: 20rpx;
  font-weight: 700;
}

.control-img{
  float:right;
  margin-right:20rpx;
}

.control-img image{
  width:96rpx;
  height:96rpx;
  margin-right: 20rpx;
}

.control-wrap{
  position: relative;
}

.line{
  width:90%;
  height:1rpx;
  border:1rpx solid #eee;
  position:absolute;
  top: 45%;
  left:5%;
  z-index: -1;
}

.musicImg{
  width:60rpx;
  height:60rpx;
  margin-left: 40rpx;
  vertical-align: middle;
}
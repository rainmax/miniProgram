/* pages/movie-detail/movie-detail.wxss */
.movie-detail-container{
  display:flex;
  flex-direction: column;
  align-items: center; 
}

.movie-poster{
  width:70%;
  height:650rpx;
  margin-top:50rpx;
  margin-bottom: 20rpx;
}

.movie-detail-container text{
  margin:10rpx 0;
}

.movie-title{
  font-size:32rpx;
  font-weight:700;
}

.movie-info{
  display:flex;
  flex-direction: column;
  justify-content: flex-start; 
}

.grade,
.author,
.actor{
  font-size:28rpx;
}

.watch{
  color:white;
  font-weight: 600;
  margin-top:40rpx;
  width:40%;
  height:80rpx;
  line-height: 80rpx;
  background-color:lawngreen;
}

